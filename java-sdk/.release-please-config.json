{
  "release-type": "maven",
  "packages": {
    "java-sdk/packages/core": {
      "release-type": "maven",
      "package-name": "core",
      "changelog-path": "java-sdk/packages/core/CHANGELOG.md",
      "version-file": "java-sdk/packages/core/pom.xml"
    },
    "java-sdk/packages/client": {
      "release-type": "maven",
      "package-name": "client",
      "changelog-path": "java-sdk/packages/client/CHANGELOG.md",
      "version-file": "java-sdk/packages/client/pom.xml"
    },
    "java-sdk/packages/http": {
      "release-type": "maven",
      "package-name": "http",
      "changelog-path": "java-sdk/packages/http/CHANGELOG.md",
      "version-file": "java-sdk/packages/http/pom.xml"
    }
  },
  "changelog-sections": [
    {"type": "feat", "section": "Features"},
    {"type": "fix", "section": "Bug Fixes"},
    {"type": "chore", "section": "Miscellaneous", "hidden": true}
  ],
  "commit-search-depth": 500,
  "pull-request-title-pattern": "chore: release ${version}",
  "exclude-paths": [
    ".github/**",
    "docs/**"
  ],
  "exclude-commits": [
    "^chore: update inter-module dependencies",
    "^chore\\(deps\\):",
    "^build\\(deps\\):"
  ]
}